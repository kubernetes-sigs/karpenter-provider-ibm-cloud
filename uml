        - resolveInstanceTypes(ctx context.Context, nodeClaim *v1.NodeClaim) ([]*cloudprovider.InstanceType, error)

        + Create(ctx context.Context, nodeClaim *v1.NodeClaim) (*v1.NodeClaim, error)
